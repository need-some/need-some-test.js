{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./target/dist",
		"sourceMap": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"typeRoots": [
		"node_modules/@types"
	],
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*",
		"**/*.spec.ts"
	],
	"lib": [
		"es5",
		"es2015",
		"es2015.promise"
	]
}
